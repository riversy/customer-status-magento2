<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="customer_status" type="string">
            <resources>
                <resource ref="Riversy_CustomerStatus::attribute"/>
            </resources>
            <join reference_table="customer_status" reference_field="customer_id" join_on_field="entity_id">
                <field>status</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
